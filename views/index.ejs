<% include includes/header %>

<section class="main">
    <div class="container">
        <div class="homepage">
            <a href="https://github.com/thehovdev/rexar" target="__blank">
                <button class="github-button">Github</button>
            </a>

            <div class="row">
                <div class="col-sm-12">
                    <img src="/images/logo.png" width="200px">
                    <span class="app-name text-center">Rexar Framework</span>
                </div>
            </div>

            <div class="row">
                <div class="todo-list">
                    <div class="col-sm-6">
                        <h2 class="text-center">Example Todo List</h2>
                        <div id="root"></div>
                    </div>
                </div>

                <div class="package-list">
                    <div class="col-sm-6">
                        <h2 class="text-center">Includes</h2>
                        <ul class="list-group">
                            <li class="list-group-item">React</li>
                            <li class="list-group-item">React Router</li>
                            <li class="list-group-item">Redux</li>
                            <li class="list-group-item">Webpack (Client / Server)</li>
                            <li class="list-group-item">NodeJs[dependency]</li>
                            <li class="list-group-item">MongoDB[dependency]</li>
                            <li class="list-group-item">Mongoose</li>
                            <li class="list-group-item">Express</li>
                            <li class="list-group-item">EJS template engine</li>
                            <li class="list-group-item">Node-config configuration package</li>

                        </ul>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12">
                    <h2 class="text-center">Rexar CLI commands</h2>

                    <table class="table">
                    <thead>
                      <tr>
                        <th><h4>Command</h4></th>
                        <th><h4>Action</h4</th>
                      </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><h4><b>node rexar make:action myaction</b></h4></td>
                            <td><h4>create new redux action</h4></td>
                        </tr>
                        <tr>
                            <td><h4><b>node rexar make:component mycomponent</b></h4></td>
                            <td><h4>create new react component</h4></td>
                        </tr>
                        <tr>
                            <td><h4><b>node rexar make:container mycontainer</b></h4></td>
                            <td><h4>create new redux container</h4></td>
                        </tr>
                        <tr>
                            <td><h4><b>node rexar make:reducer myreducer</b></h4></td>
                            <td><h4>create new redux reducer</h4></td>
                        </tr>
                        <tr>
                            <td><h4><b>node rexar make:route auth</b></h4></td>
                            <td><h4>create new express route</h4></td>
                        </tr>
                        <tr>
                            <td><h4><b>node rexar make:controller authController</b></h4></td>
                            <td><h4>create new express controller</h4></td>
                        </tr>
                        <tr>
                            <td><h4><b>node rexar make:model user</b></h4></td>
                            <td><h4>create new express model</h4></td>
                        </tr>

                    </tbody>
                  </table>

                </div>
            </div>
        </div>
    </div>
</section>

<% include includes/footer %>